<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/nickname_et"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="닉네임을 입력하세요."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repasswd_et" />

    <EditText
        android:id="@+id/userid_et"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:maxLength="30"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="이메일을 입력하세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_iv" />

    <EditText
        android:id="@+id/passwd_et"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호 6~16자리를 입력하세요."
        android:layout_marginTop="16dp"
        android:maxLength="16"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userid_et" />

    <EditText
        android:id="@+id/repasswd_et"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호 6~16자리를 입력하세요."
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:singleLine="true"
        android:maxLength="16"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwd_et" />

    <Button
        android:id="@+id/join_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickname_et" />
</androidx.constraintlayout.widget.ConstraintLayout>